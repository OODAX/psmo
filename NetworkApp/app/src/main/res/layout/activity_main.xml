<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:padding="16dp"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvDeviceIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="IP urządzenia: "
        android:textStyle="bold"
        android:paddingBottom="8dp"/>

    <EditText
        android:id="@+id/etIp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="IP address"
        android:inputType="text"
        android:text="192.168.1.11"/>

    <EditText
        android:id="@+id/etPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port do wysyłania"
        android:inputType="number"
        android:text="12345"/>

    <EditText
        android:id="@+id/etListenPort"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Port do nasłuchiwania"
        android:inputType="number"
        android:text="12345"/>

    <EditText
        android:id="@+id/etMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Message"
        android:inputType="text"
        android:text="hello"/>

    <Button
        android:id="@+id/btnPing"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ping wskazany adres i port" />

    <Button
        android:id="@+id/btnUdpSend"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wyślij pakiet UDP z wiadomością" />

    <Button
        android:id="@+id/btnUdpListen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nasłuchuj pakietów UDP" />

    <Button
        android:id="@+id/btnApi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Fetch API data" />

    <TextView
        android:id="@+id/tvLog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logi, status, dane API, odebrane wiadomości"
        android:padding="8dp"/>
</LinearLayout>
